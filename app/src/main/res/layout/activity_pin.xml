<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_2"
    tools:context=".PinActivity">


    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/capitol_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/product_sans"
            android:layout_marginTop="5dp"
            android:textColor="#5000CA"
            android:text="ATP (Action Trace &amp; Protect)"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F2F3F4" />



    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/logo"
        android:id="@+id/pageTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>





    <LinearLayout
        android:layout_below="@id/logo"
        android:id="@+id/passCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/title"
            android:text="@string/please_provide_your_mpin"
            android:fontFamily="@font/product_sans"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#303030"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/codeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <!--                        android:background="@drawable/border_primary"-->

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:fontFamily="@font/product_sans"
                android:gravity="center"
                android:inputType="textPassword"
                android:maxLength="4"
                android:padding="16dp"
                android:singleLine="true"
                android:textIsSelectable="true"
                android:textSize="30sp"
                android:textColor="#303030"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

    <com.davidmiguel.numberkeyboard.NumberKeyboard
        android:id="@+id/pinKeyboard"
        android:layout_width="260dp"
        android:layout_height="400dp"
        app:numberkeyboard_numberKeyTextColor="@color/white"
        app:numberkeyboard_numberKeyBackground="@drawable/circle_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:numberkeyboard_keyboardType="integer"
        tools:ignore="MissingClass,NotSibling" />


</RelativeLayout>