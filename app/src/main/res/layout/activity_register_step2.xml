<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/layout"
    tools:context=".RegisterStep2Activity">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/verificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="SMS Verification"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#303030"
            android:fontFamily="@font/product_sans"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <ImageView
            android:src="@drawable/sent_message"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="A vertification SMS has been sent to"
            android:gravity="center_horizontal"
            android:textColor="#303030"
            android:layout_marginBottom="5dp"
            android:textSize="19sp"
            android:fontFamily="@font/product_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/userPhoneNumber"
            android:text="+639193693499"
            android:textColor="@color/design_default_color_primary"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:fontFamily="@font/product_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/codeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="6"
                android:padding="15dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/product_sans"
                android:background="@drawable/border_primary"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/timerForOtp"
                android:layout_gravity="center_horizontal"
                android:textColor="#303030"
                android:text=""
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/product_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginTop="7dp"-->
<!--            android:layout_marginBottom="5dp"-->
<!--            android:layout_marginRight="15dp"-->
<!--            android:layout_marginLeft="15dp"-->
<!--            android:layout_marginEnd="15dp"-->
<!--            android:layout_marginStart="15dp"-->
<!--            android:background="#F2F3F4" />-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btnProceed"
                android:text="PROCEED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/resendOTP"
                android:visibility="gone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans"
                android:text="Resend OTP"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />



        </LinearLayout>





    </LinearLayout>



    <LinearLayout
        android:id="@+id/validationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/capitol_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            />


        <TextView

            android:id="@+id/waitingMessage"
            android:text="Please wait while ATP doing some confirmations."
            android:fontFamily="@font/product_sans"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</RelativeLayout>