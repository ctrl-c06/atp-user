<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:visibility="gone"
        android:id="@+id/barCodeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_image"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:src="@drawable/id_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:cropToPadding="true"
         />

    <ImageView
        android:id="@+id/user_qr"
        android:src="@drawable/test_qr"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:layout_width="185dp"
        android:cropToPadding="true"
        android:background="@drawable/test_border"
        android:layout_height="185dp"/>

    <ImageView
        android:id="@+id/user_image"
        android:layout_below="@+id/user_qr"
        android:src="@drawable/no_image"
        android:layout_centerHorizontal="true"
        android:background="@drawable/test_border"
        android:layout_marginTop="2dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_width="140dp"
        android:layout_height="140dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_below="@+id/user_image"
        android:text="CHRISTOPHER P. VISTAL"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/captain"
        android:letterSpacing="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>